" Ignored Compiled Files
set wildignore=*.o,*~,*.pyc

" Search stuff
set ignorecase
set hlsearch
set incsearch

" Text stuff
syntax enable
set encoding=utf8

" Tab stuff
set expandtab
set smarttab
set shiftwidth=4
set tabstop=4
set lbr
set tw=500
set ai
set si

" Get rid of swap files
set nobackup
set nowb
set noswapfile
